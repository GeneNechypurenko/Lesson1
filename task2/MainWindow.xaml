<Window x:Class="task2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:task2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Login: " Margin="0 0 100 0"></Label>
            <TextBox Name="loginTextBox" Width="200" Margin="0 0 0 0"></TextBox>
            <Label Content="Password: " Margin="0 0 100 0"></Label>
            <TextBox Name="passwordTextBox" Width="200" Margin="0 0 0 0"></TextBox>
            <Button Name="loginButton" Content="LOGIN" Width="200" Height="20" Margin="0 15 0 0" Click="loginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
